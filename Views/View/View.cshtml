    </div>

    <div class="from-group">
        @Html.LabelFor(m => m.第5段溫度顯示值)
        @Html.TextBoxFor(m => m.第5段溫度顯示值, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.第5段溫度顯示值)
    </div>

    <div class="from-group">
        @Html.LabelFor(m => m.第6段溫度顯示值)
        @Html.TextBoxFor(m => m.第6段溫度顯示值, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.第6段溫度顯示值)
