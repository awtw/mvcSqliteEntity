@model csvWeb_v3_sqlite.Models.TemperatureRecord
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Record</h2>

@using (@Html.BeginForm("Save", "View"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
